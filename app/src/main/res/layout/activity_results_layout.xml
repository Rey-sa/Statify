<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        >

    <LinearLayout
            android:id="@+id/idHeaderBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:gravity="center_vertical">
        <ImageButton
                android:id="@+id/idBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="onBackClick"
                android:layout_gravity="center"
        />


        <!-- Logo -->
        <TextView
                android:id="@+id/idLogo"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:layout_weight="1"
                android:gravity="center"
        />
    </LinearLayout>

    <!-- Layout for Cards -->
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/idHeaderBar"
            app:rowCount="3"
            app:columnCount="2"

    >

        <!-- Display Card 0 | 0 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"


        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/arithmetic"
                        android:textSize="@dimen/card_icon_size"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/card_padding"

                />
                <TextView
                        android:id="@+id/idTextCard00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_text_size"
                        android:textAlignment="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 0 | 1 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_gravity="center_vertical|center_horizontal"
                        android:background="@color/card_background"

                >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/median"
                            android:textSize="@dimen/card_icon_size"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:padding="@dimen/card_padding"

                    />
                    <TextView
                            android:id="@+id/idTextCard01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/card_text_size"
                            android:textAlignment="center"/>

                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 1 | 0 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/range"
                        android:textSize="@dimen/card_icon_size"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/card_padding"

                />
                <TextView
                        android:id="@+id/idTextCard10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_text_size"
                        android:textAlignment="center"
                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 1 | 1 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="1"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/variance"
                        android:textSize="@dimen/card_icon_size"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/card_padding"

                />
                <TextView
                        android:id="@+id/idTextCard11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_text_size"
                        android:textAlignment="center"
                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 2 | 0 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="2"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deviation"
                        android:textSize="@dimen/card_icon_size"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/card_padding"

                />
                <TextView
                        android:id="@+id/idTextCard20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_text_size"
                        android:textAlignment="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 2 | 1 -->
        <androidx.cardview.widget.CardView
                android:id="@+id/idCard21"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="2"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/frequencies"
                        android:textSize="@dimen/card_icon_size"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/card_padding"

                />
                <TextView
                        android:id="@+id/idTextCard21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/abs_rel"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_text_size"
                        android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>