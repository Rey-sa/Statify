<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">


    <!-- Logo -->
    <TextView
            android:id="@+id/idLogo"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:layout_marginTop="12dp"
    />

    <!-- Table for Frequencies -->
    <TableLayout
            android:id="@+id/idTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:padding="8dp"
            android:layout_below="@+id/idLogo"
    >

        <TableRow
                android:id="@+id/idHeaderValue">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value"
                    android:padding="8dp"
                    android:textColor="@color/white"
            />

        </TableRow>

        <TableRow
                android:id="@+id/idHeaderFreq">
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count"
                    android:padding="8dp"
                    android:textColor="@color/white"

            />

        </TableRow>
    </TableLayout>

    <!-- Layout for Cards -->
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/idTableLayout"
            app:rowCount="3"
            app:columnCount="2"
            android:layout_margin="10dp"
    >

        <!-- Display Card 0 | 0 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"


        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/arithmetic"
                        android:textSize="@dimen/card_icon_size"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/card_padding"

                />
                <TextView
                        android:id="@+id/idTextCard00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_text_size"
                        android:textAlignment="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 0 | 1 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_gravity="center_vertical|center_horizontal"
                        android:background="@color/card_background"

                >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/median"
                            android:textSize="@dimen/card_icon_size"
                            android:fontFamily="monospace"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:padding="@dimen/card_padding"

                    />
                    <TextView
                            android:id="@+id/idTextCard01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/card_text_size"
                            android:textAlignment="center"/>

                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 1 | 0 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/range"
                        android:textSize="@dimen/card_icon_size"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/card_padding"

                />
                <TextView
                        android:id="@+id/idTextCard10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_text_size"
                        android:textAlignment="center"
                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 1 | 1 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="1"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48sp"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:padding="8dp"

                />
                <TextView
                        android:id="@+id/idTextCard11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 2 | 0 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="2"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48sp"
                        android:fontFamily="monospace"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/idTextCard20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Display Card 2 | 1 -->
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_row="2"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"

        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/card_background"

            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48sp"
                        android:fontFamily="monospace"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/idTextCard21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>